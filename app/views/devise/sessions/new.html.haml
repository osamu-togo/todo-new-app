.loginfield
  .loginfield__main
    .loginfield__main__logintop
      ログイン
    .loginfield__main__loginform
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .loginfield__main__loginform__field
          = f.label :email,class: "label"
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email"
        .loginfield__main__loginform__field
          = f.label :password,class: "label"
          %br/
          = f.password_field :password, autocomplete: "current-password"
        - if devise_mapping.rememberable?
          .loginfield__main__loginform__field
            = f.check_box :remember_me,class: "label"
            = f.label :remember_me,class: "label"
        .loginfield__main__loginform__actions
          = f.submit "Log in",class: "btn-flat-border"
    .loginfield__main__login__bottom
    = render "devise/shared/links"
